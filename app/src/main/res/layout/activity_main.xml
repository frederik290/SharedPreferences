<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/first_name"
        android:text="First Name:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/last_name"
        android:layout_below="@id/first_name"
        android:text="Last Name:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/age"
        android:text="Age:"
        android:layout_below="@id/last_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="left"
        android:id="@+id/phone_number"
        android:text="Phone Number:"
        android:layout_below="@id/age"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_name_input"
        android:layout_toRightOf="@id/first_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/last_name_input"
        android:layout_toRightOf="@id/last_name"
        android:layout_below="@id/first_name_input"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/age_input"
        android:inputType="number"
        android:layout_toRightOf="@id/age"
        android:layout_below="@id/last_name_input"
        android:layout_alignLeft="@id/last_name_input"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number_input"
        android:inputType="phone"
        android:layout_toRightOf="@id/phone_number"
        android:layout_alignBottom="@id/phone_number"/>


</RelativeLayout>
